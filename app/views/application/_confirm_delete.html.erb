<div class="modal fade" id="delete-confirm" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <button type="button" class="close close-modal" data-dismiss="modal"><span aria-hidden="true">&times;</span><span class="sr-only"></span></button>
        <h4 class="modal-title" id="myModalLabel"><%= "Delete #{params[:model].pluralize.capitalize}" %></h4>
      </div>
      <div class="modal-body">
        <div class="center">Are you sure you want to delete the following?</div>
        <div class= "center" style="padding: 20px">
          <% @deletions.each do |item| %>
            <span class="badge alert-success">
              <%= item.display_name %>
            </span>
          <% end %>
        </div>
        <h5 class="center">Click <span class="badge alert-info">Confirm</span> to confirm the deletion.</h5>
      </div>
      <div class="modal-footer">
        <button id="close-modal" type="button" class="btn btn-default close-modal" data-value="1" data-dismiss="modal">Cancel</button>
        <button id="btn-delete-confirm" type="button" class="btn btn-primary delete close-modal confirm" data-value="0" data-dismiss="modal" model='<%= "#{params[:model]}" %>'>Confirm</button>
      </div>
    </div>
  </div>
</div>
<table class="table table-condensed properties">
    <th>
        <%= property_sortable "name" %>
    </th>
    <% if show_units %>
        <th>
            <%= property_sortable "units" %>
        </th>
    <% end %>
    <th>
        <%= property_sortable "units_short", "Short Units" %>
    </th>
    <% if show_created %>
        <th>
            <%= property_sortable "created_at", "Created" %>
        </th>
    <% end %>
    <th>
        <%= property_sortable "updated_at", "Updated" %>
    </th>
    <% if show_remove %>
        <th>
            Remove
        </th>
    <% end %>
  <%= render partial: 'properties/property', collection: @properties, locals: { show_units: show_units, show_created: show_created, show_remove: show_remove }  %>
</table>
<%= will_paginate @properties, inner_window: 0, outer_window: 0, param_name: 'properties_page', params: { event: 'property' } %>

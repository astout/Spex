    <div class="col-xs-8">
    <hr/>
    <h5>Relationships</h5>
        <div class="panel panel-default" id="entity-employers">
            <div class="panel-heading">
                <h3 class="panel-title">Entities</h3>
            </div>
            <div class="panel-body">
            </div>
        </div>
        <div class="panel panel-default" id="property-associations">
            <div class="panel-heading">
                <h3 class="panel-title">Properties</h3>
            </div>
            <div class="panel-body">
            </div>
        </div>
    </div>
</div>

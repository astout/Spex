<% provide(:title, @property.name) %>
<div class="row">
    <aside class="col-xs-2">
        <section>
            <h1>
                <%= @property.name %> Definition
            </h1>
            <small class="note"><%= @property.default_label %></small>
            <div style="float: right">
                <%= link_to "Edit", edit_property_path(@property), class: "btn btn75 btn-primary btn-sm" %>
            </div>
        </section>
    </aside>
</div>

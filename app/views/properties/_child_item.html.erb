<li id="<%= child_item.child_id %>">
    <span class="user">
      <%= link_to child_item.child.name, child_item.child %>
    </span>
  <% if current_user.admin? %>
    | <%= link_to "remove", child_item, method: :delete,
                                     data: { confirm: "You sure?" },
                                     title: child_item.child.name %>
  <% end %>
</li>
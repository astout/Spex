<script type="text/javascript">
  $("body").addClass("signin");
</script>

<% provide(:title, "Sign in") %>
<h1>Sign in</h1>

<% unless signed_in? %>

  <div class="row">
    <div class="col-xs-10 col-xs-offset-1 col-md-4 col-md-offset-4">
      <%= bootstrap_form_for(:session, url: sessions_path, inline_errors: false) do |f| %>
  		
        <!-- <%= f.label :login %> -->
        <%= f.text_field :login %>

        <!-- <%= f.label :password %> -->
        <%= f.password_field :password %>

        <%= f.submit "Sign in", class: "btn btn-large btn-primary btn75" %>
      <% end %>

      <p>New user? <%= link_to "Sign up now!", signup_path %></p>
    </div>
  </div>

<% else %>

  <div class="alert alert-info col-xs-6 col-xs-offset-3">
    <p>You're already signed in, <%= current_user.first %>!</p>
    <div>
      <%= link_to "", current_user, class: "fa fa-user" %>
      <%= link_to current_user.login, current_user %>
    </div>
  </div>
  <div style="margin-bottom: 100px"></div>

<% end %>
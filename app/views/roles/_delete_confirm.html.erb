<div class="modal fade" id="delete-confirm" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
  <span id='<%= "#{@role.id}" %>' class="delete-role-id"></span>
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <button type="button" class="close close-modal" data-dismiss="modal"><span aria-hidden="true">&times;</span><span class="sr-only"></span></button>
        <h4 class="modal-title" id="myModalLabel">Delete Role</h4>
      </div>
      <div class="modal-body">
        <div class="center">There are currently <span class="badge alert-info"> <%= @role.users.count %> </span> users assigned to <span class="badge alert-info"><%= @role.caps_name %></span> </div>
        <% if @role.users.count > 0 %>
            <div class="center">You must assign these users to another role.</div>
            <h5>New Role:</h5>
            <%= select_tag "role_ids", options_from_collection_for_select(@other_roles, :id, :caps_name, @other_roles.first), id: "new-role", class: "form-control default-select-roles col-xs-12"%>
            <div class="center">The roles for the <span class="badge alert-info"><%= @role.blank? ? 0 : @role.users.count %></span> users assigned to <span class="badge alert-info"><%= @role.blank? ? "" : @role.caps_name %></span> will be changed to <span id="new-role" class="badge alert-info"><%= @other_roles.first.caps_name %></span>.</div>
        <% else %>
            <div class="center">There are no extra actions required to delete this role.</div>
            <br>
            <h5 class="center">Click <span class="badge alert-info">Confirm</span> to delete <span class="badge alert-info"><%= @role.caps_name %></span></h5>
        <% end %>
      </div>
      <div class="modal-footer">
        <button id="close-modal" type="button" class="btn btn-default close-modal" data-value="1" data-dismiss="modal">Cancel</button>
        <button id="btn-delete-confirm" type="button" class="btn btn-primary close-modal confirm" data-value="0" data-dismiss="modal">Confirm</button>
      </div>
    </div>
  </div>
</div>
$('#entities').html("<%= j render partial: 'entities/entities', locals: { show_created: false, show_remove: false } %>");
// $('#entity_search_field').val('');

var alert_html = "";

<% unless @result.nil? %>
    <% if @result[:r] == 1 %>
        alert_html += "    <div class='alert alert-success small-font center'>";
        alert_html += "    <%= @result[:msg] %>";
        alert_html += "    </div>";
        clearSelectedEntity();
    <% else %>
        alert_html += "    <div class='alert alert-danger small-font center'>";
        alert_html += "        <%= @result[:msg] %>";
        alert_html += "    </div>";
    <% end %>
<% else %>
    alert_html += "    <div class='alert alert-danger small-font center'>";
    alert_html += "        There was an error deleting " + <%= @entity.name %> ;
    alert_html += "    </div>";
<% end %>

hubAlert("#entity-alert", alert_html);
persistStyling();
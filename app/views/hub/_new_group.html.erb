<h1> Create New Group</h1>

<div class="row">
  <div class="col-xs-10 col-xs-offset-1">
    <%= bootstrap_form_for(@group, url: { controller: "hub", action: "create_group" }, method: :post, remote: true) do |f| %>
      <%= render 'groups/fields', f: f %>
      <%= hidden_field_tag :selected_entity, "" %>
      <%= f.submit "Create Group", class: "btn btn-sm btn-primary btn100", id: "create-group", onclick: "$('input#selected_entity.val(window.selected_entity)')" %>
    <% end %>
  </div>
</div>
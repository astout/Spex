<div class="panel-group" id="accordion-new-property">
    <div class="panel panel-default">
        <div class="panel-heading" id="new-property-collapse-heading" data-target="#collapse-new-property" data-toggle="collapse" data-parent="#accordion-new-property">
            <h4 class="panel-title">
                <a class="accordion-toggle collapsed" href="#collapse-new-property"> 
                    Create New Property
                    <i class="collapse-indicator glyphicon glyphicon-chevron-right pull-right"></i>
                </a>
            </h4>
        </div>
        <div id="collapse-new-property" class="panel-collapse collapse">
            <div class="panel-body">
                <h6> New Property </h6>
                <div class="row">
                  <div class="col-xs-10 col-xs-offset-1">
                    <%= bootstrap_form_for(@property, url: { controller: "hub", action: "create_property" }, method: :post, remote: true) do |f| %>
                      <%= render 'properties/fields', f: f %>
                      <%= hidden_field_tag :selected_groups, "" %>
                      <div class="padding15-block col-xs-12"><br></div>
                      <%= f.submit "Create Property", class: "btn btn-sm btn-primary btn110", id: "create-property" %>
                    <% end %>
                  </div>
                </div>
            </div>
        </div>
    </div>
</div>


var groups_html = "  <%= j render 'groups/groups' %>";

$('#groups').html(groups_html)
$('input[id=group_search_field]').val('');

var alert_html = "";

<% unless @result.nil? %>
    <% if @result[:r] == 1 %>
        alert_html += "    <div class='alert alert-success'>";
        alert_html += "    <%= @result[:msg] %>";
        alert_html += "    </div>";
        //clear the group form fields
        $('input[id^=group]').val('');
    <% else %>
        alert_html += "    <div class='alert alert-danger'>";
        alert_html += "        <%= @result[:msg] %>";
        alert_html += "    </div>";
    <% end %>
<% else %>
    alert_html += "    <div class='alert alert-danger'>";
    alert_html += "        There was an error saving #{@group.name}";
    alert_html += "    </div>";
<% end %>

$('#hub-alert').html(alert_html);

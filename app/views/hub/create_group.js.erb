$('#groups').html("<%= j render partial: 'groups/groups', locals: { show_created: false, show_remove: false } %>");
$('input[id=group_search_field]').val('');

var alert_html = "";

<% unless @result.nil? %>
    <% if @result[:r] == 1 %>
        alert_html += "    <div class='alert alert-success small-font center'>";
        alert_html += "    <%= @result[:msg] %>";
        alert_html += "    </div>";
        //clear the group form fields
        $('input[id^=group]').val('');
    <% else %>
        alert_html += "    <div class='alert alert-danger small-font center'>";
        alert_html += "        <%= @result[:msg] %>";
        alert_html += "    </div>";
    <% end %>
<% else %>
    alert_html += "    <div class='alert alert-danger small-font center'>";
    alert_html += "        There was an error saving #{@group.name}";
    alert_html += "    </div>";
<% end %>

hubAlert("#group-alert", alert_html);

persistStyling();

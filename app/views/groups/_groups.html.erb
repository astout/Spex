<% unless defined? columns %>
    <% columns = [] %>
<% end %>

<table class="table table-condensed groups">
  <% if columns.include? 'name' %>
    <th>
        <%= sortable 'group', "name" %>
    </th>
  <% end %>
  <% if columns.include? 'label' %>
    <th>
        <%= sortable 'group', "default_label", "Label" %>
    </th>
  <% end %>
  <% if columns.include? 'created' %>
      <th>
          <%= sortable 'group', "created_at", "Created" %>
      </th>
  <% end %>
  <% if columns.include? 'updated' %>
    <th>
        <%= sortable 'group', "updated_at", "Updated" %>
    </th>
  <% end %>
  <% if columns.include? 'remove' %>
    <th>
        Remove
    </th>
  <% end %>
  <%= render partial: 'groups/group', collection: @groups, locals: { columns: columns }  %>
</table>
<%= will_paginate @groups, inner_window: 0, outer_window: 0, param_name: 'groups_page', params: { event: 'group' } %>

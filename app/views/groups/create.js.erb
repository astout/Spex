$('#hub-alert').html(flash_alert);
html = "<%= j render 'groups/groups' %>";

$('#groups').html(html);
$('input[id^=group]').val('');


function flash_alert() {
    var result = "<% unless @result.nil? %>";
        result+= "<% if @result[:r] == 1 %>";
        result+= "    <div class='alert alert-success'>";
        result+= "    <%= @result[:msg] %>";
        result+= "    </div>";
        result+= "<% else %>";
        result+= "    <div class='alert alert-danger'>";
        result+= "        <%= @result[:msg] %>";
        result+= "    </div>";
        result+= "<% end %>";

    result+= "<% else %>";
    result+= "    <div class='alert alert-danger'>";
    result+= "        There was an error saving #{@group.name}";
    result+= "    </div>";
    result+= "<% end %>";

    return result;
}
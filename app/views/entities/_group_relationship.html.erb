<tr id=<%= "#{group_relationship.id}" %> class="list-item entity_group_relationship" data-order=<%= group_relationship.order+1 %> >
    <td>
      <%= link_to group_relationship.group.name, group_relationship %>
    </td>
    <td>
      <%= link_to group_relationship.label || "", group_relationship %>
    </td>
    <% if show_created %>
      <td>
        <%= "#{group_relationship.created_at.strftime('%m/%d/%Y')}" %>
      </td>
    <% end %>
    <td>
      <%= group_relationship.order+1 %>
    </td>
    <% if current_user.admin? && show_remove %>
      <td>
        <%= link_to "", group_relationship, method: :delete, 
               data: { confirm: "You sure?" },
               title: group_relationship.group.name, 
                class: "glyphicon glyphicon-trash xs",
                style: "margin-left: 5px; color: #FF4F4D" %>
      </td>
    <% end %>
</tr>

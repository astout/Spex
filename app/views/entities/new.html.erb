<% provide(:title, 'New Entity') %>
<h1>New Entity</h1>

<div class="row">
  <div class="col-xs-6 col-xs-offset-3">
    <%= bootstrap_form_for(@entity, inline_errors: false) do |f| %>
      <%= render 'entities/fields', f: f %>
      <%= f.submit "Create Entity", class: "btn btn-large btn-primary btn150"%>
    <% end %>
  </div>
</div>
<li>
    <span class="user">
      <%= link_to entity.name, entity %>
      <% if current_user.admin? %>
        <%= link_to "", entity, method: :delete, 
                       data: { confirm: "You sure?" },
                       title: entity.name, 
                        class: "glyphicon glyphicon-trash xs",
                        style: "margin-left: 5px; color: #FF4F4D" %>
      <% end %>
    </span>
</li>
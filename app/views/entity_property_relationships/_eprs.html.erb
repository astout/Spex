<table class="table table-condensed eprs">
    <th>
        Entity
    </th>
    <th>
        Group
    </th>
    <th>
        Property
    </th>
    <th>
        <%= epr_sortable "label", "Property Label" %>
    </th>
    <th>
        Value
    </th>
    <th>
        <%= epr_sortable "units" %>
    </th>
    <th>
        <%= epr_sortable "units_short" %>
    </th>
    <th>
        <%= epr_sortable "updated_at", "Updated" %>
    </th>
    <% if show_remove %>
        <th>
            Remove
        </th>
    <% end %>
  <%= render partial: 'entity_property_relationships/epr', collection: @eprs, locals: { show_remove: show_remove }  %>
</table>
<%= will_paginate @eprs, inner_window: 0, outer_window: 0, param_name: 'eprs_page', params: { event: 'epr' } %>
